<%item = @chosen%>
    <section class="blog-title text-center">
      <div class="blog-wrapper">
        <div class="container">
          <div class= "row">  
            <h1 class="headline"><%="#{item.first_name} #{item.last_name}"%></h1>
          </div>
          </div>  
        </div>
      </div>
    </section>

    
      <section class= "blog-content">
        <div class= "container">
          <div class= "row">
            <main class="blog1col col-md-9">    
                  <div class="col-md-8 col-md-8">                    
                      <% @chosen.interactions.each do |interaction| %>
                        <ul class="list-inline info">
                         <li><%="Volunteer: #{interaction.volunteer.first_name} #{interaction.volunteer.last_name}"%></li>
                        <li><i class="fa fa-calendar"></i> <%="Date: #{interaction.time.strftime('%x')}"%></li>
                        <li><i class="fa fa-comment"></i><%="#{interaction.observation}"%></li>
               
                        </ul>
                      <% end %>                    
                  </div>
            </main>
          </div>  <!-- end of row -->
        </div>  <!-- end of container -->
      </section>
  

